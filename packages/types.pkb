create or replace package body out.types is

    ----------------------------------------------------------------------------------------------------------------------------
    ----------------------------------------------------------------------------------------------------------------------------
    ----------------------------------------------------------------------------------------------------------------------------

    function to_boolean(arg text) return boolean is
        result boolean;
    begin
        case lower(arg)
            when 'true' then
                result := true;
            when 'false' then
                result := false;
            else
                raise_application_error(-20000, 'Unrecognized boolean value ' || arg || '.');
        end case;
        return result;
    end to_boolean;

    ----------------------------------------------------------------------------------------------------------------------------
    ----------------------------------------------------------------------------------------------------------------------------
    ----------------------------------------------------------------------------------------------------------------------------

end types;
